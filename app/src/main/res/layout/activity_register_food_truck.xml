<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sv_background"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sv_gold"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del FoodTruck"
        android:textColor="@color/white"
        android:textColorHint="@color/sv_text_secondary"
        android:layout_marginTop="20dp"
        android:textCursorDrawable="@drawable/cursor_custom"
        android:backgroundTint="@color/sv_gold"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:textColor="@color/white"
        android:textColorHint="@color/sv_text_secondary"
        android:layout_marginTop="16dp"
        android:textCursorDrawable="@drawable/cursor_custom"
        android:backgroundTint="@color/sv_gold"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teléfono"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/sv_text_secondary"
        android:layout_marginTop="16dp"
        android:textCursorDrawable="@drawable/cursor_custom"
        android:backgroundTint="@color/sv_gold"
        app:layout_constraintTop_toBottomOf="@+id/etDescription" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/sv_text_secondary"
        android:layout_marginTop="16dp"
        android:textCursorDrawable="@drawable/cursor_custom"
        android:backgroundTint="@color/sv_gold"
        app:layout_constraintTop_toBottomOf="@+id/etPhone" />

    <EditText
        android:id="@+id/etRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valoración (0-10)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="@color/sv_text_secondary"
        android:layout_marginTop="16dp"
        android:textCursorDrawable="@drawable/cursor_custom"
        android:backgroundTint="@color/sv_gold"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <CheckBox
        android:id="@+id/cbDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Tiene opción de envío?"
        android:textColor="@color/white"
        android:buttonTint="@color/sv_gold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etRating" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:backgroundTint="@color/sv_gold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cbDelivery" />

</androidx.constraintlayout.widget.ConstraintLayout>